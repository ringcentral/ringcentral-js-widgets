  </head>
  <body>
    {{#each components}}
    <div id={{name}} class='component'>
      <div class='doc'>
        <h1 class='name'>{{name}}</h1>
        <a class='path' href='{{path}}'>{{path}}</a>
        <div class='description'>
          {{#each description}}
          <div>{{this}}</div>
          {{/each}}
        </div>
        <div class='props'>
          <h3>Props</h3>
          <table class='table' cellpadding="0" cellspacing="0" width="100%" border="0">
            <thead>
              <tr>
                <th class='short'>Name</td>
                <th class='short'>Type</td>       
                <th class='short'>Default</td>    
                <th class='long'>Description</td>
              </tr> 
            </thead>
            {{#each props}}
            <tr>
              <td class='short important'>{{@key}}</td>
              {{#if this.type.link}}
                <td class='short'>
                  <a href="#{{this.type.link.href}}">{{this.type.name}}</a>
                </td>
              {{else}}
                <td class='short'>
                  {{this.type.name}}
                  <div class='small'>
                    {{#each this.type.value}}
                      <div>{{this.value}}</div>
                    {{/each}}
                  </div>
                </td>
              {{/if}}
              <td class='short'>{{this.defaultValue.value}}</td>    
              <td class='long'>
                {{this.description}}
              </td>
            </tr> 
            {{/each}}
          </table>
        </div>
      </div>
      <div class='ex'>
        {{{example}}}
      </div>
    </div>
    {{/each}}
  </body>
</html>