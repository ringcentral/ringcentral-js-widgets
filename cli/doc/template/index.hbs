      /*
      * Custom styles
      *
      */
      body {
        width: 800px;
        margin: 5em auto;
        color: #333;
        background-color: #fafafa;
      }
      .table {
        width: 100%;
        border-collapse: collapse;
        font-size: .9em;
      }
      .table td {
        width: 25%;
        text-align: left;
        padding-top: .5em;
      }
      .table td.short {
        width: 20%;
      }
      .table td.long {
        width: 40%;
      }
      .table td.important {
        font-weight: bold;
        color: #000;
      }
      .table thead {
        border-bottom: 1px solid #ddd;
      }
      .table th {
        width: 25%;
        text-align: left;
        padding-top: .5em;
      }
      .table th.short {
        width: 20%;
      }
      .table th.long {
        width: 40%;
      }
      .component {
        margin-bottom: 4em;
        overflow: auto;
        zoom: 1;
      }
      .name {
        margin-bottom: 0;
      }
      .description {
        margin-top: .5em;
        font-size: .9em;
      }
      .path {
        font-size: .8em;
        color: #ccc;
        font-weight: lighter;
        font-style: italic;
      }
      .small {
        font-size: .7em;
      }
      .doc {
        width: calc(100% - 300px);
        float: left;
      }
      .ex {
        position: relative;
        width: 250px;
        height: 400px;
        float: right;
        border: 1px solid #eee;
        margin: 10px;
      }
